---
import Galeria from "./Galeria.astro";


const { data_by_id } = Astro.props;
console.log(data_by_id.data.description)
---
<div class="flex flex-col lg:flex-row gap-16 items-center">
    <Galeria/>
    <!-- Product Images -->
    <div class="flex flex-col gap-6 lg:w-2/4">
      <img src="https://static.nike.com/a/images/t_PDP_1280_v1/f_auto,b_rgb:f5f5f5/3396ee3c-08cc-4ada-baa9-655af12e3120/scarpa-da-running-su-strada-invincible-3-xk5gLh.png" alt="" class="w-full h-full aspect-square object-cover rounded-xl" />
      <div class="flex justify-between h-24">
        <img src="https://static.nike.com/a/images/t_PDP_1280_v1/f_auto,b_rgb:f5f5f5/3396ee3c-08cc-4ada-baa9-655af12e3120/scarpa-da-running-su-strada-invincible-3-xk5gLh.png" alt="" class="w-24 h-24 rounded-md cursor-pointer" />
        <img src="https://static.nike.com/a/images/t_PDP_1280_v1/f_auto,b_rgb:f5f5f5/3396ee3c-08cc-4ada-baa9-655af12e3120/scarpa-da-running-su-strada-invincible-3-xk5gLh.png" alt="" class="w-24 h-24 rounded-md cursor-pointer" />
        <img src="https://static.nike.com/a/images/t_PDP_1280_v1/f_auto,b_rgb:f5f5f5/3396ee3c-08cc-4ada-baa9-655af12e3120/scarpa-da-running-su-strada-invincible-3-xk5gLh.png" alt="" class="w-24 h-24 rounded-md cursor-pointer" />
        <img src="https://static.nike.com/a/images/t_PDP_1280_v1/f_auto,b_rgb:f5f5f5/3396ee3c-08cc-4ada-baa9-655af12e3120/scarpa-da-running-su-strada-invincible-3-xk5gLh.png" alt="" class="w-24 h-24 rounded-md cursor-pointer" />
      </div>
    </div>

    
    <!-- Product Details -->
    <div class="flex flex-col gap-4 lg:w-2/4">
      <div>
        <span class="text-violet-600 font-semibold">Special Sneaker</span>
        <h1 class="text-3xl font-bold">{ data_by_id.data.title }</h1>
      </div>
      <p class="text-gray-700">
        { data_by_id.data.description }
      </p>
      <h6 class="text-2xl font-semibold">$ 199.00</h6>
      <div class="flex items-center gap-12">
        <div class="flex items-center">
          <button class="bg-gray-200 py-2 px-5 rounded-lg text-violet-800 text-3xl">-</button>
          <span class="py-4 px-6 rounded-lg">1</span>
          <button class="bg-gray-200 py-2 px-4 rounded-lg text-violet-800 text-3xl">+</button>
        </div>
        <button class="bg-violet-800 text-white font-semibold py-3 px-16 rounded-xl">Add to Cart</button>
      </div>
    </div>
  </div>
  
