---
import { Image } from 'astro:assets';
const { banner } = Astro.props;
const { title, button, image, content } = banner;
---

<section class="section banner h-screen relative">
  
  <div class="container">
    <div class="row items-center">
      <div class="lg:col-6">
        <h1 class="banner-title text-default text-4xl font-extrabold tracking-tight leading-tight">
          {title}
        </h1>
        <p class="mt-6 text-xl">
        {content}
        </p>
        {
          button.enable && (
            <a class="btn btn-white mt-8" href={button.link}>
              {button.label}
            </a>
          )
        }
      </div>
      <div class="lg:col-6">
        <Image
          class="w-full object-contain"
          alt="banner"
          src={image}
          width={603}
          height={396}
        />
      </div>
    </div>
  </div>
